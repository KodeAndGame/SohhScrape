  <system.web>
    <customErrors defaultRedirect="~/errors/GeneralError.aspx" mode="On">
      <error statusCode="404" redirect="~/errors/PageNotFound.aspx"/>
    </customErrors>
    <compilation debug="true" targetFramework="4.0" />

    <authentication mode="Forms">
